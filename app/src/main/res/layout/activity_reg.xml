<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    android:orientation="vertical"
    >



    <TextView
        android:layout_marginTop="120dp"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="用户注册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/numTv"
            android:text="输入账号"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:hint="请填用户名"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:id="@+id/usernameEt"
            android:layout_toRightOf="@id/numTv"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="#64000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/usernameEt"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/passTv"
            android:text="输入密码"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:hint="请填写密码"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:id="@+id/passEt"
            android:layout_toRightOf="@id/passTv"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="#64000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/passEt"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pass1Tv"
            android:text="确认密码"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:hint="请填填写确认密码"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:id="@+id/pass1Et"
            android:layout_toRightOf="@id/pass1Tv"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="#64000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/pass1Et"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>


    <Button
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:onClick="submit"
        android:clickable="true"
        android:background="@drawable/blue_border_radius"
        android:text="注册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>